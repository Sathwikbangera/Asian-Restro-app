<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.miniproject.hoteldatabase.finalize_order"
    android:background="@drawable/lastpage"
    >


    <TextView
        android:id="@+id/order_final"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/tv"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="30dp"
        android:text="order"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/order_final"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="202dp"
        android:text="Your order is :"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:id="@+id/tot_p"
        android:text="--"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@+id/order_final"
        android:layout_alignStart="@+id/order_final" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="52dp"
        android:layout_toStartOf="@+id/personalp"
        android:padding="5dp"
        android:text="Personal Preferances:"
        android:textColor="#000000"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/personalp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/tv"
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="0dp"
        android:textColor="#000000"
        android:textSize="11sp" />

    <TextView
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:textSize="11sp"
        android:text="Please click Send Order if you want to confirm the following order Else If you want to alter your order press Main Menu"
        android:textColor="#000000"
        android:padding="4dp"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/tv"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="#ffbc7a"
        android:onClick="main_menu"
        android:text="Main Menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button4"
        android:layout_alignEnd="@+id/order_final"
        android:background="#ffbc7a"
        android:onClick="send_ord"
        android:text="Send order"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="12sp" />
</RelativeLayout>
